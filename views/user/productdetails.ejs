<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name || 'Product' %> - Elite Wear</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/userStyle/productSelected.css">
    <style>
        .loading-btn {
            opacity: 0.6;
            pointer-events: none;
        }
        .toast-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1050;
        }
    </style>
</head>
<body>
    <%- include("../partials/user/header") %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Home</a></li>
            <li class="breadcrumb-item"><a href="/allproduct" class="text-decoration-none text-dark">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page">Product</li>
        </ol>
    </nav>
    <main class="container my-5">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="row">
                    <div class="col-2 product-thumbnails">
                        <% if (product.images && product.images.length > 0) { %>
                            <% product.images.forEach(function(image) { %>
                                <img 
                                    src="<%= image.url %>" 
                                    alt="Thumbnail" 
                                    onclick="changeMainImage(this.src)"
                                    onerror="this.src='/images/placeholder.jpg'"
                                >
                            <% }); %>
                        <% } else { %>
                            <p>No images available</p>
                        <% } %>
                    </div>
                    <div class="col-10 product-main-image-container">
                        <% if (product.images && product.images.length > 0) { %>
                            <img 
                                id="mainImage" 
                                src="<%= product.images[0].url %>" 
                                alt="<%= product.name || 'Product' %>" 
                                class="product-main-image"
                                onerror="this.src='/images/placeholder.jpg'"
                            >
                        <% } else { %>
                            <img 
                                id="mainImage" 
                                src="/images/placeholder.jpg" 
                                alt="No image" 
                                class="product-main-image"
                            >
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h1 class="mb-2"><%= product.name || 'Unnamed Product' %></h1>
                <p class="text-muted">Product Code: <%= product.sku || 'N/A' %></p>
                <div class="mb-3">
                    <% for (let i = 0; i < 5; i++) { %>
                        <% if (i < Math.floor(product.ratings?.average || 0)) { %>
                            <i class="fas fa-star text-warning"></i>
                        <% } else if (i < (product.ratings?.average || 0)) { %>
                            <i class="fas fa-star-half-alt text-warning"></i>
                        <% } else { %>
                            <i class="far fa-star text-warning"></i>
                        <% } %>
                    <% } %>
                    <span class="ms-2">(<%= product.ratings?.count || 0 %> reviews)</span>
                </div>
                
                <div class="mb-3" id="priceDisplay">
                    <% if (product.variants && product.variants.length > 0) { %>
                        <span class="fs-4 fw-bold" id="salePrice">₹<%= product.variants[0].salePrice?.toFixed(2) || 'N/A' %></span>
                        <% if (product.variants[0].varientPrice && product.variants[0].varientPrice > product.variants[0].salePrice) { %>
                            <span class="original-price" id="regularPrice">₹<%= product.variants[0].varientPrice.toFixed(2) %></span>
                            <span class="discount-badge" id="discountBadge">
                                <%= Math.round(((product.variants[0].varientPrice - product.variants[0].salePrice) / product.variants[0].varientPrice) * 100) %>% OFF
                            </span>
                        <% } %>
                    <% } else { %>
                        <span class="fs-4 fw-bold">Price not available</span>
                    <% } %>
                </div>

                <div class="mb-3" id="stockDisplay">
                    <% if (product.variants && product.variants.length > 0 && product.variants[0].varientquatity > 0) { %>
                        <span class="text-success" id="stockStatus"><i class="fas fa-check-circle"></i> In Stock</span>
                        <% if (product.variants[0].variantQuantity <= 3) { %>
                            <span class="low-stock ms-2" id="stockQuantity">Only <%= product.variants[0].varientquatity %> left!</span>
                        <% } %>
                    <% } else { %>
                        <span class="text-danger" id="stockStatus"><i class="fas fa-times-circle"></i> Out of Stock</span>
                    <% } %>
                </div>

                <form id="add-to-cart-form" data-product-id="<%= product._id %>" class="mb-4">
                    <div class="mb-4">
                        <label class="form-label">Size:</label>
                        <div class="size-selector">
                            <% if (product.variants && product.variants.length > 0) { %>
                                <% product.variants.forEach(function(variant, index) { %>
                                    <input 
                                        type="radio" 
                                        name="size" 
                                        id="size-<%= variant.size %>" 
                                        value="<%= variant.size %>"
                                        data-index="<%= index %>"
                                        data-regular="<%= variant.varientPrice || 0 %>"
                                        data-sale="<%= variant.salePrice || 0 %>"
                                        data-quantity="<%= variant.variantQuantity || 0 %>"
                                        <%= index === 0 ? 'checked' : '' %>
                                        onchange="updatePriceAndStock(this)"
                                        required
                                    >
                                    <label for="size-<%= variant.size %>"><%= variant.size %></label>
                                <% }); %>
                            <% } else { %>
                                <p>No sizes available</p>
                            <% } %>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Color:</label>
                        <div class="color-selector">
                            <% if (product.color) { %>
                                <input 
                                    type="radio" 
                                    name="color" 
                                    id="color-<%= product.color %>" 
                                    value="<%= product.color %>" 
                                    checked
                                    required
                                >
                                <label 
                                    for="color-<%= product.color %>" 
                                    style="background-color: <%= product.color %>"
                                    title="<%= product.color %>"
                                ></label>
                            <% } else { %>
                                <p>No color specified</p>
                            <% } %>
                        </div>
                    </div>

                    <label class="form-label">Quantity:</label>
                    <div class="input-group quantity-selector mb-4">
                        <button 
                            class="btn btn-outline-secondary" 
                            type="button" 
                            onclick="decrementQuantity()"
                            id="decrement-btn"
                        >-</button>
                        <input 
                            type="text" 
                            class="form-control text-center" 
                            id="quantity" 
                            name="quantity" 
                            value="1" 
                            readonly
                        >
                        <button 
                            class="btn btn-outline-secondary" 
                            type="button" 
                            onclick="incrementQuantity()"
                            id="increment-btn"
                        >+</button>
                    </div>
                
                    <div class="d-grid gap-2 d-md-flex">
                        <button 
                            type="submit" 
                            class="btn add-to-cart-btn flex-fill" 
                            id="add-to-cart-btn"
                        >Add to Cart</button>
                        <button 
                            type="button" 
                            class="btn buy-now-btn flex-fill" 
                            onclick="buyNow()" 
                            id="buy-now-btn"
                        >Buy Now</button>
                    </div>
                </form>

                <div class="mb-4">
                    <button 
                        class="btn btn-link p-0" 
                        onclick="addToWishlist('<%= product._id %>')"
                        id="wishlist-btn"
                    >
                        <i class="far fa-heart"></i> Add to Wishlist
                    </button>
                </div>

                <div class="product-specs">
                    <h3>DESCRIPTION</h3>
                    <p><%= product.description || 'No description available' %></p>
                    <h3>Size & Fit</h3>
                    <p><%= product.sizeFit || 'No size & fit information available' %></p>
                    <h3>Wash Care</h3>
                    <p><%= product.washCare || 'No wash care instructions available' %></p>
                    <h3>Specifications</h3>
                    <p><%= product.specifications || 'No specifications available' %></p>
                    <p class="text-muted fst-italic mt-4">
                        Note: The actual colors of the product may vary slightly due to photographic lighting sources or your display settings.
                    </p>
                </div>
            </div>
        </div>

        <h3 class="mt-5 mb-4">Similar Products</h3>
        <div class="row">
            <% if (similarProducts && similarProducts.length > 0) { %>
                <% similarProducts.forEach(function(item) { %>
                    <div class="col-md-3 mb-4">
                        <div class="card similar-hover">
                            <a href="/productdetails/<%= item._id %>">
                                <img 
                                    src="<%= item.images && item.images.length > 0 ? item.images[0].url : '/images/placeholder.jpg' %>" 
                                    class="card-img-top" 
                                    alt="<%= item.name || 'Product Image' %>"
                                    onerror="this.src='/images/placeholder.jpg'"
                                >
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><%= item.name || 'Unnamed Product' %></h5>
                                <p class="card-text fw-bold">
                                    ₹<%= item.variants && item.variants.length > 0 ? (item.variants[0].salePrice || 0).toFixed(2) : 'N/A' %>
                                </p>
                                <% 
                                    const itemOffer = item.offer || 0;
                                    const categoryOffer = item.categoryId?.offer || 0;
                                    const totalItemOffer = itemOffer + categoryOffer;
                                %>
                                <% if (totalItemOffer > 0) { %>
                                    <p class="text-danger fw-semibold"><%= totalItemOffer %>% OFF</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-muted">No similar products found.</p>
                </div>
            <% } %>
        </div>
    </main>

    <section class="cta-section text-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h2 class="mb-4">Get Exclusive Offers & Updates</h2>
                    <p class="mb-4">Subscribe to our newsletter for exclusive deals, new arrivals, and fashion tips.</p>
                    <div class="input-group mb-3 mx-auto" style="max-width: 500px;">
                        <input type="email" class="form-control" placeholder="Enter your email address">
                        <button class="btn btn-dark" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="toast-container"></div>

    <%- include("../partials/user/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        console.log('productdetails.ejs - Script loaded');
        const variants = <%- JSON.stringify(product.variants || []) %>;

        function showToast(message, type = 'success') {
            console.log(`showToast - Message: ${message}, Type: ${type}`);
            const toastContainer = document.querySelector('.toast-container');
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.role = 'alert';
            toast.ariaLive = 'assertive';
            toast.ariaAtomic = 'true';
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            setTimeout(() => toast.remove(), 3000);
        }

        function changeMainImage(src) {
            console.log('changeMainImage - New src:', src);
            document.getElementById('mainImage').src = src;
        }

        function updatePriceAndStock(element) {
            console.log('updatePriceAndStock - Element:', element);
            const index = element.getAttribute('data-index');
            const variant = variants[index];

            const salePriceEl = document.getElementById('salePrice');
            const regularPriceEl = document.getElementById('regularPrice');
            const discountBadgeEl = document.getElementById('discountBadge');
            const stockStatusEl = document.getElementById('stockStatus');
            const stockQuantityEl = document.getElementById('stockQuantity');
            const quantityInput = document.getElementById('quantity');

            salePriceEl.textContent = `₹${(variant.salePrice || 0).toFixed(2)}`;
            if (variant.varientPrice && variant.varientPrice > variant.salePrice) {
                regularPriceEl.textContent = `₹${variant.varientPrice.toFixed(2)}`;
                regularPriceEl.style.display = 'inline';
                discountBadgeEl.textContent = `${Math.round(((variant.varientPrice - variant.salePrice) / variant.varientPrice) * 100)}% OFF`;
                discountBadgeEl.style.display = 'inline';
            } else {
                regularPriceEl.style.display = 'none';
                discountBadgeEl.style.display = 'none';
            }

            if (variant.variantQuantity > 0) {
                stockStatusEl.innerHTML = '<i class="fas fa-check-circle"></i> In Stock';
                stockStatusEl.className = 'text-success';
                if (variant.variantQuantity <= 3) {
                    stockQuantityEl.textContent = `Only ${variant.variantQuantity} left!`;
                    stockQuantityEl.style.display = 'inline';
                } else {
                    stockQuantityEl.style.display = 'none';
                }
            } else {
                stockStatusEl.innerHTML = '<i class="fas fa-times-circle"></i> Out of Stock';
                stockStatusEl.className = 'text-danger';
                stockQuantityEl.style.display = 'none';
                document.getElementById('add-to-cart-btn').disabled = true;
                document.getElementById('buy-now-btn').disabled = true;
            }

            quantityInput.value = 1;
            quantityInput.setAttribute('max', variant.variantQuantity || 1);
            updateQuantityButtons();
        }

        function updateQuantityButtons() {
            const quantityInput = document.getElementById('quantity');
            const currentValue = parseInt(quantityInput.value);
            const maxQuantity = parseInt(quantityInput.getAttribute('max'));
            document.getElementById('decrement-btn').disabled = currentValue <= 1;
            document.getElementById('increment-btn').disabled = currentValue >= maxQuantity;
        }

        function incrementQuantity() {
            console.log('incrementQuantity - Called');
            const quantityInput = document.getElementById('quantity');
            const currentValue = parseInt(quantityInput.value);
            const maxQuantity = parseInt(quantityInput.getAttribute('max'));
            if (currentValue < maxQuantity) {
                quantityInput.value = currentValue + 1;
                updateQuantityButtons();
            }
        }

        function decrementQuantity() {
            console.log('decrementQuantity - Called');
            const quantityInput = document.getElementById('quantity');
            const currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
                updateQuantityButtons();
            }
        }

        async function addToWishlist(productId) {
            console.log('addToWishlist - Initiated:', productId);
            const button = document.getElementById('wishlist-btn');
            button.classList.add('loading-btn');
            try {
                const response = await fetch('/addTowhislist', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId }),
                    credentials: 'include',
                });
                const result = await response.json();
                console.log('addToWishlist - Response:', result);
                if (result.success) {
                    showToast('Added to wishlist', 'success');
                } else {
                    showToast(result.message, 'danger');
                }
            } catch (error) {
                console.error('addToWishlist - Error:', error);
                showToast('Failed to add to wishlist', 'danger');
            } finally {
                button.classList.remove('loading-btn');
            }
        }

        async function buyNow() {
            console.log('buyNow - Initiated');
            const form = document.getElementById('add-to-cart-form');
            const productId = form.getAttribute('data-product-id');
            const quantity = form.querySelector('#quantity').value;
            const size = form.querySelector('input[name="size"]:checked')?.value;
            const color = form.querySelector('input[name="color"]:checked')?.value;

            const button = document.getElementById('buy-now-btn');
            button.classList.add('loading-btn');

            console.log('buyNow - Payload:', { productId, quantity, size, color });

            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, quantity, size, color }),
                    credentials: 'include',
                });
                const result = await response.json();
                console.log('buyNow - Response:', result);
                if (result.success) {
                    window.location.href = '/checkout';
                } else {
                    showToast(result.message, 'danger');
                    if (response.status === 401) {
                        showToast('Please log in to proceed', 'danger');
                        setTimeout(() => window.location.href = '/login', 2000);
                    }
                }
            } catch (error) {
                console.error('buyNow - Error:', error);
                showToast('Failed to proceed to checkout', 'danger');
            } finally {
                button.classList.remove('loading-btn');
            }
        }

        async function addToCart() {
            console.log('addToCart - Initiated');
            const form = document.getElementById('add-to-cart-form');
            const productId = form.getAttribute('data-product-id');
            const quantity = form.querySelector('#quantity').value;
            const size = form.querySelector('input[name="size"]:checked')?.value;
            const color = form.querySelector('input[name="color"]:checked')?.value;

            console.log('addToCart - Payload:', { productId, quantity, size, color });

            const button = document.getElementById('add-to-cart-btn');
            button.classList.add('loading-btn');

            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, quantity, size, color }),
                    credentials: 'include',
                });
                const result = await response.json();
                console.log('addToCart - Response:', result);
                if (result.success) {
                    showToast(result.message, 'success');
                    setTimeout(() => window.location.href = '/cart', 1000);
                } else {
                    showToast(result.message, 'danger');
                    if (response.status === 401) {
                        showToast('Please log in to add items to cart', 'danger');
                        setTimeout(() => window.location.href = '/login', 2000);
                    }
                }
            } catch (error) {
                console.error('addToCart - Error:', error);
                showToast('Failed to add to cart', 'danger');
            } finally {
                button.classList.remove('loading-btn');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            console.log('productdetails.ejs - DOMContentLoaded');
            const form = document.getElementById('add-to-cart-form');
            if (!form) {
                console.error('add-to-cart-form not found');
                return;
            }
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                console.log('add-to-cart-form - Submit intercepted');
                addToCart();
            });

            const firstSize = document.querySelector('input[name="size"]:checked');
            if (firstSize) {
                console.log('productdetails.ejs - Initializing first size');
                updatePriceAndStock(firstSize);
            }
        });
    </script>
</body>
</html>