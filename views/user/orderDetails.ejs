            const reviewForms = document.querySelectorAll('[id^="reviewForm"]');
            reviewForms.forEach(form => {
                const ratingInputs = form.querySelectorAll('input[name="rating"]');
                const titleInput = form.querySelector('input[name="title"]');
                const reviewInput = form.querySelector('textarea[name="review"]');
                const productI = form.querySelector('input[name="productId"]');
                
                if (ratingInputs.length === 0) {
                    console.error(`[ERROR] Form ${form.id} is missing rating inputs`);
                }
                
                if (!titleInput) {
                    console.error(`[ERROR] Form ${form.id} is missing title input`);
                }
                
                if (!reviewInput) {
                    console.error(`[ERROR] Form ${form.id} is missing review textarea`);
                }
                
                if (!productI) {
                    console.error(`[ERROR] Form ${form.id} is missing productId input`);
                }
            });
            
            console.log('[DEBUG] Review functionality diagnostics complete');
        });
