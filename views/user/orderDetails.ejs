<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ELITE WEAR - Order Details</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/userStyle/orderDetails.css">
    <style>
        .order-details-card { border: 1px solid #e9ecef; border-radius: 8px; padding: 20px; background: #fff; }
        .product-img { width: 100%; max-width: 200px; border-radius: 8px; }
        .status-tag { padding: 5px 10px; border-radius: 12px; font-size: 0.9em; }
        .status-pending { background: #6c757d; color: #fff; }
        .status-processing { background: #ffc107; color: #000; }
        .status-confirmed { background: #17a2b8; color: #fff; }
        .status-shipped { background: #007bff; color: #fff; }
        .status-delivered { background: #28a745; color: #fff; }
        .status-cancelled { background: #dc3545; color: #fff; }
        .status-return-requested { background: #fd7e14; color: #fff; }
        .section-title { font-size: 1.2em; margin-bottom: 10px; }
        .order-summary .summary-row { display: flex; justify-content: space-between; margin-bottom: 5px; }
        .grand-total { font-weight: bold; border-top: 1px solid #e9ecef; padding-top: 10px; }
        .btn-action { transition: all 0.3s; }
        .btn-action:hover { transform: translateY(-2px); }
        .toast-container { position: fixed; top: 20px; right: 20px; z-index: 1050; }
    </style>
</head>
<body>
    <div class="page-loader loader-active">
        <div class="spinner"></div>
    </div>

    <div class="toast-container">
        <div class="toast custom-toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
            <div class="toast-header">
                <strong class="me-auto">Order Action</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <%- include("../partials/user/header") %>
    <%- include("../partials/user/profileSidebar") %>

    <div class="main-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="breadcrumb-custom my-3">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/profile">Profile</a></li>
                    <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Order Details</li>
                </ol>
            </nav>

            <div class="row">
                <div class="col-lg-3 d-none d-lg-block">
                    <div class="user-sidebar">
                        <div class="user-profile">
                            <div class="profile-img">
                                <img src="<%= user.profileImage || '/Uploads/placeholder.jpg' %>" alt="Profile">
                            </div>
                            <h6 class="mt-2 mb-0"><%= user.name %></h6>
                        </div>
                        <ul class="nav flex-column nav-sidebar">
                            <li class="nav-item">
                                <a class="nav-link" href="/profile"><i class="bi bi-person"></i> My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/addresses"><i class="bi bi-geo-alt"></i> My Address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/orders"><i class="bi bi-box"></i> My Order</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wishlist"><i class="bi bi-heart"></i> My Wishlist</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wallet"><i class="bi bi-wallet2"></i> My Wallet</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/coupons"><i class="bi bi-ticket-perforated"></i> My Coupon</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/change-password"><i class="bi bi-lock"></i> Change Password</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout"><i class="bi bi-box-arrow-right"></i> Log Out</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-9">
                    <div class="order-details-card">
                        <h4 class="order-title">Order #<%= order.orderNumber %></h4>
                        <div class="row">
                            <div class="col-md-4">
                                <% if (order.order_items.length > 0) { %>
                                    <img 
                                        src="<%= order.order_items[0].productId.images && order.order_items[0].productId.images.length > 0 ? order.order_items[0].productId.images[0] : '/Uploads/placeholder.jpg' %>" 
                                        alt="<%= order.order_items[0].productId.name %>" 
                                        class="product-img"
                                    >
                                <% } else { %>
                                    <img src="/Uploads/placeholder.jpg" alt="No Product" class="product-img">
                                <% } %>
                                <div class="mt-3">
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">Status:</span>
                                        <span class="status-tag status-<%= order.status.toLowerCase().replace(' ', '-') %>">
                                            <%= order.status.toUpperCase() %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8 order-info">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <h5 class="section-title">Shipping Address</h5>
                                        <div class="shipping-info">
                                            <p class="mb-1"><%= order.address.name %></p>
                                            <p class="mb-1"><%= order.address.houseName %></p>
                                            <p class="mb-1"><%= order.address.place %>, <%= order.address.district %></p>
                                            <p class="mb-1"><%= order.address.state %>, <%= order.address.pincode %></p>
                                            <p class="mb-1"><%= order.address.contactNumber %></p>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4">
                                        <h5 class="section-title">Payment Method</h5>
                                        <div class="payment-info">
                                            <p class="mb-1"><%= order.paymentMethod %></p>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <h5 class="section-title">Order Items</h5>
                                        <div class="order-items">
                                            <% order.order_items.forEach(item => { %>
                                                <div class="summary-row">
                                                    <span><%= item.product_name %> (Size: <%= item.size %>) x <%= item.quantity %></span>
                                                    <span>₹<%= item.total_amount.toFixed(2) %></span>
                                                </div>
                                            <% }) %>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mt-4">
                                        <h5 class="section-title">Order Summary</h5>
                                        <div class="order-summary">
                                            <div class="summary-row">
                                                <span>Items Total</span>
                                                <span>₹<%= (order.total - (order.total > 8000 ? 0 : 200)).toFixed(2) %></span>
                                            </div>
                                            <div class="summary-row">
                                                <span>Shipping Charge</span>
                                                <span>₹<%= order.total > 8000 ? 0 : 200 %></span>
                                            </div>
                                            <div class="summary-row grand-total">
                                                <span>Grand Total</span>
                                                <span>₹<%= order.total.toFixed(2) %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-12">
                                        <% if (order.status === 'Delivered') { %>
                                            <button class="btn btn-outline-dark btn-action me-2" onclick="initiateReturn('<%= order._id %>')">
                                                <i class="bi bi-arrow-return-left"></i> Return Order
                                            </button>
                                            <button class="btn btn-outline-dark btn-action me-2" onclick="downloadInvoice('<%= order._id %>')">
                                                <i class="bi bi-file-earmark-text"></i> Download Invoice
                                            </button>
                                        <% } else if (order.status === 'Pending' || order.status === 'Processing') { %>
                                            <button class="btn btn-outline-dark btn-action me-2" onclick="cancelOrder('<%= order._id %>')">
                                                <i class="bi bi-x-circle"></i> Cancel Order
                                            </button>
                                        <% } else if (order.status === 'Cancelled') { %>
                                            <button class="btn btn-outline-dark btn-action me-2" onclick="reOrder('<%= order._id %>')">
                                                <i class="bi bi-arrow-repeat"></i> Re Order
                                            </button>
                                        <% } %>
                                        <button class="btn btn-dark btn-action" onclick="trackOrder()">
                                            <i class="bi bi-truck"></i> Track Order
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/user/footer") %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                document.querySelector('.page-loader').classList.remove('loader-active');
            }, 800);

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function showToast(message, isSuccess = true) {
            var toastEl = document.querySelector('.toast');
            var toastBody = toastEl.querySelector('.toast-body');
            toastBody.innerHTML = `<i class="bi ${isSuccess ? 'bi-check-circle-fill text-success' : 'bi-exclamation-triangle-fill text-danger'} me-2"></i>${message}`;
            var toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        function initiateReturn(orderId) {
            if (confirm("Are you sure you want to initiate a return for this order?")) {
                fetch(`/return-order/${orderId}`, { method: 'POST' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            showToast("Return initiated successfully");
                            setTimeout(() => window.location.reload(), 2000);
                        } else {
                            showToast(data.message, false);
                        }
                    })
                    .catch(err => showToast("Error initiating return", false));
            }
        }

        function cancelOrder(orderId) {
            if (confirm("Are you sure you want to cancel this order?")) {
                fetch(`/cancel-order/${orderId}`, { method: 'POST' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            showToast("Order cancelled successfully");
                            setTimeout(() => window.location.reload(), 2000);
                        } else {
                            showToast(data.message, false);
                        }
                    })
                    .catch(err => showToast("Error cancelling order", false));
            }
        }

        function reOrder(orderId) {
            if (confirm("Do you want to place this order again?")) {
                fetch(`/reorder/${orderId}`, { method: 'POST' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = data.redirect;
                        } else {
                            showToast(data.message, false);
                        }
                    })
                    .catch(err => showToast("Error reordering", false));
            }
        }

        function downloadInvoice(orderId) {
            window.location.href = `/invoice/${orderId}`;
        }

        function trackOrder() {
            showToast("Tracking not fully implemented. Check back soon!");
        }
    </script>
</body>
</html>