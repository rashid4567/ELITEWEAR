<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ELITE WEAR - Confirm Logout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/userStyle/logout.css">
</head>
<body>
    
    <%- include("../partials/user/header") %>
    
    <div class="main-container">
        <div class="container py-5">
            <div class="row">
                
                <%- include("../partials/user/profileSidebar") %>
                
                <div class="col-md-8 col-lg-9">
                    <div class="logout-container">
                        <div class="logout-card">
                            <div class="card-header">
                                <h2>Ready to leave?</h2>
                                <p class="subtitle">We'll miss you</p>
                            </div>
                            
                            <div class="card-body">
                                <div class="illustration-container">
                                    <div class="illustration-wrapper">
                                        <img src="/uploads/logout.png" alt="Goodbye illustration" class="logout-illustration">
                                        <div class="illustration-shadow"></div>
                                    </div>
                                </div>
                                
                                <div class="message-container">
                                    <p class="farewell-message">Thank you for shopping with ELITE WEAR.</p>
                                    <p class="return-message">Your style journey continues. We look forward to inspiring your next fashion statement.</p>
                                </div>
                                
                                <div class="action-container">
                                    <a href="/logout" class="btn-logout">
                                        <span>Confirm Logout</span>
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                    <a href="/account" class="btn-return">
                                        <span>Return to Account</span>
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="before-you-go">
                                <h3>Before you go</h3>
                                <div class="suggestions-container">
                                    <div class="suggestion-item">
                                        <div class="suggestion-icon">
                                            <i class="fas fa-tag"></i>
                                        </div>
                                        <div class="suggestion-content">
                                            <h4>Exclusive Offers</h4>
                                            <p>Don't miss out on our latest collections and special discounts</p>
                                        </div>
                                    </div>
                                    <div class="suggestion-item">
                                        <div class="suggestion-icon">
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <div class="suggestion-content">
                                            <h4>Your Wishlist</h4>
                                            <p>Items in your wishlist may sell out soon</p>
                                        </div>
                                    </div>
                                    <div class="suggestion-item">
                                        <div class="suggestion-icon">
                                            <i class="fas fa-gift"></i>
                                        </div>
                                        <div class="suggestion-content">
                                            <h4>Rewards Program</h4>
                                            <p>Check your points balance and available rewards</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <%- include("../partials/user/footer") %>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animate elements on page load
            setTimeout(() => {
                document.querySelector('.logout-card').classList.add('visible');
            }, 100);
            
            // Add hover effect to buttons
            const logoutBtn = document.querySelector('.btn-logout');
            const returnBtn = document.querySelector('.btn-return');
            
            logoutBtn.addEventListener('mouseover', function() {
                this.classList.add('btn-hover');
            });
            
            logoutBtn.addEventListener('mouseout', function() {
                this.classList.remove('btn-hover');
            });
            
            returnBtn.addEventListener('mouseover', function() {
                this.classList.add('btn-hover');
            });
            
            returnBtn.addEventListener('mouseout', function() {
                this.classList.remove('btn-hover');
            });
            
            // Add click animation to buttons
            logoutBtn.addEventListener('click', function(e) {
                e.preventDefault();
                this.classList.add('btn-clicked');
                
                setTimeout(() => {
                    window.location.href = this.getAttribute('href');
                }, 600);
            });
            
            // Animate suggestion items
            const suggestionItems = document.querySelectorAll('.suggestion-item');
            suggestionItems.forEach((item, index) => {
                setTimeout(() => {
                    item.classList.add('visible');
                }, 300 + (index * 150));
            });
        });
    </script>
</body>
</html>
