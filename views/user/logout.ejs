<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elite Wear | Confirm Logout</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/userStyle/header.css">
    <link rel="stylesheet" href="/userStyle/footer.css">
    <link rel="stylesheet" href="/userStyle/logout.css">
</head>
<body>
    
    <%- include("../partials/user/header") %>
    
    <div class="main-container">
        <!-- Floating Particles -->
        <div class="particles" id="particles"></div>
        
        <div class="container py-4">
            <div class="row">
                
                <%- include("../partials/user/profileSidebar") %>
                
                <div class="col-md-8 col-lg-9 element">
                    <div class="logout-container">
                        <div class="logout-card">
                            <div class="card-header">
                                <h2>Ready to leave?</h2>
                                <p class="subtitle">We'll miss you</p>
                                <button class="theme-toggle" id="themeToggle">
                                    <i class="fas fa-moon"></i>
                                </button>
                            </div>
                            
                            <div class="card-body">
                                <div class="illustration-container">
                                    <div class="illustration-wrapper">
                                        <img src="/uploads/logout.png" alt="Goodbye illustration" class="logout-illustration">
                                        <div class="illustration-shadow"></div>
                                    </div>
                                </div>
                                
                                <div class="message-container">
                                    <p class="farewell-message">Thank you for shopping with Elite Wear.</p>
                                    <p class="return-message">Your style journey continues. We look forward to inspiring your next fashion statement.</p>
                                </div>
                                
                                <div class="action-container">
                                    <a href="/logout" class="btn-logout" id="logoutBtn">
                                        <span>Confirm Logout</span>
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                    <a href="/account" class="btn-return">
                                        <span>Return to Account</span>
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="before-you-go">
                                <h3>Before you go</h3>
                                <div class="suggestions-container">
                                    <div class="suggestion-item" onclick="window.location.href='/offers'">
                                        <div class="suggestion-icon">
                                            <i class="fas fa-tag"></i>
                                        </div>
                                        <div class="suggestion-content">
                                            <h4>Exclusive Offers</h4>
                                            <p>Don't miss out on our latest collections and special discounts</p>
                                        </div>
                                    </div>
                                    <div class="suggestion-item" onclick="window.location.href='/wishlist'">
                                        <div class="suggestion-icon">
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <div class="suggestion-content">
                                            <h4>Your Wishlist</h4>
                                            <p>Items in your wishlist may sell out soon</p>
                                        </div>
                                    </div>
                                    <div class="suggestion-item" onclick="window.location.href='/rewards'">
                                        <div class="suggestion-icon">
                                            <i class="fas fa-gift"></i>
                                        </div>
                                        <div class="suggestion-content">
                                            <h4>Rewards Program</h4>
                                            <p>Check your points balance and available rewards</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Door Animation Elements -->
    <div class="fade-out-effect" id="fadeEffect"></div>
    <div class="door-container" id="doorContainer">
        <div class="door" id="door">
            <div class="door-handle"></div>
            <div class="door-message">See you soon!</div>
        </div>
    </div>
    <div class="goodbye-message" id="goodbyeMessage">Goodbye!</div>

    <!-- Footer Section -->
    
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Create particles
            createParticles();
            
            // Animate elements on page load
            setTimeout(() => {
                document.querySelector('.logout-card').classList.add('visible');
            }, 100);
        
            // Add hover effect to buttons
            const logoutBtn = document.querySelector('.btn-logout');
            const returnBtn = document.querySelector('.btn-return');
        
            logoutBtn.addEventListener('mouseover', function() {
                this.classList.add('btn-hover');
            });
        
            logoutBtn.addEventListener('mouseout', function() {
                this.classList.remove('btn-hover');
            });
        
            returnBtn.addEventListener('mouseover', function() {
                this.classList.add('btn-hover');
            });
        
            returnBtn.addEventListener('mouseout', function() {
                this.classList.remove('btn-hover');
            });
        
            // Add door animation to logout button
            logoutBtn.addEventListener('click', function(e) {
                e.preventDefault();
                this.classList.add('btn-clicked');
                
                // Get the target URL
                const targetUrl = this.getAttribute('href');
                
                // Activate the door animation
                const fadeEffect = document.getElementById('fadeEffect');
                const doorContainer = document.getElementById('doorContainer');
                const door = document.getElementById('door');
                const goodbyeMessage = document.getElementById('goodbyeMessage');
                
                // Start the animation sequence
                fadeEffect.classList.add('active');
                
                setTimeout(() => {
                    doorContainer.classList.add('active');
                    
                    setTimeout(() => {
                        door.classList.add('open');
                        
                        setTimeout(() => {
                            goodbyeMessage.classList.add('active');
                            
                            setTimeout(() => {
                                // Navigate to the logout URL
                                window.location.href = targetUrl;
                            }, 1000);
                        }, 500);
                    }, 500);
                }, 500);
            });
        
            // Animate suggestion items
            const suggestionItems = document.querySelectorAll('.suggestion-item');
            suggestionItems.forEach((item, index) => {
                setTimeout(() => {
                    item.classList.add('visible');
                }, 300 + (index * 150));
            });
        
            // Add 3D tilt effect to illustration
            const illustrationWrapper = document.querySelector('.illustration-wrapper');
        
            document.addEventListener('mousemove', function(e) {
                if (window.innerWidth > 768) {
                    const xAxis = (window.innerWidth / 2 - e.pageX) / 25;
                    const yAxis = (window.innerHeight / 2 - e.pageY) / 25;
                    illustrationWrapper.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg) translateY(-10px)`;
                }
            });
        
            // Reset transform when mouse leaves
            document.addEventListener('mouseleave', function() {
                illustrationWrapper.style.transform = 'rotateY(0deg) rotateX(0deg) translateY(0)';
            });
        
            // Theme toggle functionality
            const themeToggle = document.getElementById('themeToggle');
            const themeIcon = themeToggle.querySelector('i');
        
            // Check for saved theme preference or use preferred color scheme
            const savedTheme = localStorage.getItem('theme');
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        
            if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
                document.body.classList.add('dark-mode');
                themeIcon.className = 'fas fa-sun';
            }
        
            themeToggle.addEventListener('click', function() {
                document.body.classList.toggle('dark-mode');
            
                if (document.body.classList.contains('dark-mode')) {
                    themeIcon.className = 'fas fa-sun';
                    localStorage.setItem('theme', 'dark');
                } else {
                    themeIcon.className = 'fas fa-moon';
                    localStorage.setItem('theme', 'light');
                }
            
                // Add rotation animation
                themeToggle.style.transform = 'rotate(360deg)';
                setTimeout(() => {
                    themeToggle.style.transform = 'rotate(0deg)';
                }, 300);
            });
        
            // Create floating particles
            function createParticles() {
                const particlesContainer = document.getElementById('particles');
                const colors = ['#6a26cd', '#8a4af3', '#ff6b6b', '#ffd166'];
                const particleCount = 20;
            
                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.classList.add('particle');
                
                    // Random properties
                    const size = Math.random() * 20 + 5;
                    const color = colors[Math.floor(Math.random() * colors.length)];
                    const left = Math.random() * 100;
                    const duration = Math.random() * 20 + 10;
                    const delay = Math.random() * 10;
                
                    // Apply styles
                    particle.style.width = `${size}px`;
                    particle.style.height = `${size}px`;
                    particle.style.backgroundColor = color;
                    particle.style.left = `${left}%`;
                    particle.style.top = `${Math.random() * 100}%`;
                    particle.style.opacity = Math.random() * 0.3 + 0.1;
                    particle.style.animationDuration = `${duration}s`;
                    particle.style.animationDelay = `${delay}s`;
                
                    particlesContainer.appendChild(particle);
                }
            }
        
            // Add interactive effects to suggestion items
            suggestionItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    const icon = this.querySelector('.suggestion-icon');
                    icon.style.transform = 'scale(1.2) rotate(10deg)';
                });
            
                item.addEventListener('mouseleave', function() {
                    const icon = this.querySelector('.suggestion-icon');
                    icon.style.transform = 'scale(1) rotate(0deg)';
                });
            
                item.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'translateY(-5px)';
                    }, 100);
                });
            });
        });
    </script>
</body>
</html>
