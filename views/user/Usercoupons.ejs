<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Elite Wear | Available Coupons</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/userStyle/userCoupon.css">
</head>
<body>
  <%- include("../partials/user/header") %>
  
  <!-- Background Elements -->
  <div class="bg-gradient"></div>
  <div class="bg-grid"></div>
  <div class="floating-element floating-element-1"></div>
  <div class="floating-element floating-element-2"></div>
  
  <div class="page-wrapper">
    <div class="container">
      <div class="row g-4">
        <!-- Sidebar Column -->
        <div class="col-lg-3 col-md-4">
          <%- include("../partials/user/profileSidebar") %>
        </div>
        
        <!-- Main Content Column -->
        <div class="col-lg-9 col-md-8">
          <div class="content-container">
            <!-- Page Header -->
            <div class="page-header">
              <div class="header-content">
                <div class="breadcrumb-nav">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                      <li class="breadcrumb-item"><a href="/profile">My Account</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Coupons</li>
                    </ol>
                  </nav>
                </div>
                <div class="header-title">
                  <h1><i class="fas fa-ticket-alt me-2"></i> My Coupons</h1>
                  <p>Discover exclusive discounts and special offers</p>
                </div>
              </div>
            </div>
            
            <!-- Coupon Filters -->
            <div class="coupon-filters">
              <div class="filter-tabs">
                <button class="filter-tab active" data-filter="all">All Coupons</button>
                <button class="filter-tab" data-filter="available">Available</button>
                <button class="filter-tab" data-filter="used">Used</button>
                <button class="filter-tab" data-filter="expired">Expired</button>
                <button class="filter-tab" data-filter="upcoming">Upcoming</button>
              </div>
              <div class="filter-actions">
                <div class="search-box">
                  <input type="text" id="couponSearch" placeholder="Search coupons...">
                  <button class="search-btn"><i class="fas fa-search"></i></button>
                </div>
                <div class="sort-dropdown">
                  <button class="sort-btn dropdown-toggle">
                    <i class="fas fa-sort-amount-down"></i> Sort
                  </button>
                  <div class="sort-dropdown-menu">
                    <a href="#" data-sort="expiry-asc">Expiry Date (Nearest)</a>
                    <a href="#" data-sort="expiry-desc">Expiry Date (Furthest)</a>
                    <a href="#" data-sort="discount-asc">Discount (Low to High)</a>
                    <a href="#" data-sort="discount-desc">Discount (High to Low)</a>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Coupons Grid -->
            <div class="coupons-grid">
              <% if (coupons && coupons.length > 0) { %>
                <% coupons.forEach((coupon, index) => { %>
                  <div class="coupon-card fade-in" data-status="<%= coupon.status %>" style="animation-delay: <%= index * 0.1 %>s;">
                    <div class="coupon-header">
                      <div class="discount-badge">
                        <span class="discount-value"><%= coupon.discount || coupon.couponpercent %>%</span>
                        <span class="discount-label">OFF</span>
                      </div>
                      <div class="coupon-status-badge <%= coupon.status %>">
                        <%= coupon.statusText %>
                      </div>
                    </div>
                    
                    <div class="coupon-body">
                      <div class="coupon-title"><%= coupon.code || coupon.coupencode %></div>
                      <div class="coupon-description">
                        <%= coupon.description || 'Discount on your purchase' %>
                      </div>
                      
                      <div class="coupon-details">
                        <div class="detail-item">
                          <i class="fas fa-tag"></i>
                          <span>Min. Purchase: â‚¹<%= coupon.minimumPurchase.toFixed(2) %></span>
                        </div>
                        <div class="detail-item">
                          <i class="far fa-calendar-alt"></i>
                          <span>Valid till <%= new Date(coupon.expiryDate).toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %></span>
                        </div>
                        <% if (coupon.limit > 1) { %>
                          <div class="detail-item">
                            <i class="fas fa-redo-alt"></i>
                            <span>Uses: <%= coupon.userUsageCount || 0 %>/<%= coupon.limit %></span>
                          </div>
                        <% } %>
                        <% if (coupon.startingDate) { %>
                          <div class="detail-item">
                            <i class="fas fa-calendar-plus"></i>
                            <span>Available from <%= new Date(coupon.startingDate).toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %></span>
                          </div>
                        <% } %>
                      </div>
                    </div>
                    
                    <div class="coupon-divider">
                      <div class="divider-circle left"></div>
                      <div class="divider-line"></div>
                      <div class="divider-circle right"></div>
                    </div>
                    
                    <div class="coupon-footer">
                      <div class="coupon-code-container">
                        <span class="coupon-code" id="coupon-<%= coupon._id %>"><%= coupon.code || coupon.coupencode %></span>
                      </div>
                      <% if (coupon.status === 'available') { %>
                        <button class="copy-btn" onclick="copyCoupon('<%= coupon._id %>', '<%= coupon.code || coupon.coupencode %>')">
                          <span class="btn-text">Copy Code</span>
                          <i class="fas fa-copy"></i>
                        </button>
                      <% } else if (coupon.status === 'used') { %>
                        <button class="used-btn" disabled>
                          <span class="btn-text">Already Used</span>
                          <i class="fas fa-check-circle"></i>
                        </button>
                      <% } else if (coupon.status === 'expired') { %>
                        <button class="expired-btn" disabled>
                          <span class="btn-text">Expired</span>
                          <i class="fas fa-times-circle"></i>
                        </button>
                      <% } else { %>
                        <button class="upcoming-btn" disabled>
                          <span class="btn-text">Coming Soon</span>
                          <i class="fas fa-clock"></i>
                        </button>
                      <% } %>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="empty-state">
                  <div class="empty-state-content scale-in">
                    <div class="empty-state-icon">
                      <i class="fas fa-ticket-alt"></i>
                    </div>
                    <h3>No Coupons Available</h3>
                    <p>There are no coupons available at the moment. Check back later for exclusive offers and discounts.</p>
                    <a href="/allproduct" class="btn-primary">
                      <i class="fas fa-shopping-bag"></i> Continue Shopping
                    </a>
                  </div>
                </div>
              <% } %>
            </div>
            
            <!-- Pagination -->
            <% if (coupons && coupons.length > 0 && totalPages > 1) { %>
              <div class="pagination-wrapper">
                <nav aria-label="Coupons pagination">
                  <ul class="pagination">
                    <!-- Previous Page -->
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                      <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous" <%= currentPage === 1 ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                        <i class="fas fa-chevron-left"></i>
                      </a>
                    </li>
                    
                    <!-- First Page -->
                    <% if (currentPage > 3) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                      </li>
                      <% if (currentPage > 4) { %>
                        <li class="page-item disabled">
                          <span class="page-link">...</span>
                        </li>
                      <% } %>
                    <% } %>
                    
                    <!-- Page Numbers -->
                    <% 
                      let startPage = Math.max(1, currentPage - 1);
                      let endPage = Math.min(totalPages, currentPage + 1);
                      
                      if (endPage - startPage + 1 < 3) {
                        if (currentPage < totalPages) {
                          endPage = Math.min(totalPages, currentPage + 2);
                        } else {
                          startPage = Math.max(1, totalPages - 2);
                        }
                      }
                      
                      for (let i = startPage; i <= endPage; i++) {
                    %>
                      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                      </li>
                    <% } %>
                    
                    <!-- Last Page -->
                    <% if (currentPage < totalPages - 2) { %>
                      <% if (currentPage < totalPages - 3) { %>
                        <li class="page-item disabled">
                          <span class="page-link">...</span>
                        </li>
                      <% } %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= totalPages %>"><%= totalPages %></a>
                      </li>
                    <% } %>
                    
                    <!-- Next Page -->
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                      <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next" <%= currentPage === totalPages ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                        <i class="fas fa-chevron-right"></i>
                      </a>
                    </li>
                  </ul>
                </nav>
                
                <div class="pagination-info">
                  <i class="fas fa-info-circle"></i> <span>Showing page <%= currentPage %> of <%= totalPages %></span>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Theme Toggle Button -->
  <button class="theme-toggle" id="themeToggle">
    <i class="fas fa-moon" id="themeIcon"></i>
  </button>

  <!-- Toast Notification -->
  <div class="toast-container">
    <div id="toast" class="toast">
      <div class="toast-content">
        <i class="fas fa-check-circle toast-icon success"></i>
        <div class="toast-message"></div>
      </div>
      <div class="toast-progress"></div>
    </div>
  </div>


  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Theme Toggle
      const themeToggle = document.getElementById('themeToggle');
      const themeIcon = document.getElementById('themeIcon');
      
      // Check for saved theme preference or use system preference
      const savedTheme = localStorage.getItem('theme') || 
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      
      // Apply the theme
      document.body.setAttribute('data-theme', savedTheme);
      updateThemeIcon(savedTheme);
      
      // Theme toggle click handler
      themeToggle.addEventListener('click', function(e) {
        createRipple(e, this);
        
        const currentTheme = document.body.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        // Apply transition class for smooth theme change
        document.body.classList.add('theme-transition');
        
        // Update theme
        document.body.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeIcon(newTheme);
        
        // Show theme change toast
        showToast(
          `${newTheme === 'dark' ? 'Dark' : 'Light'} Mode Activated`, 
          'info'
        );
        
        // Remove transition class
        setTimeout(() => {
          document.body.classList.remove('theme-transition');
        }, 500);
      });
      
      function updateThemeIcon(theme) {
        if (theme === 'dark') {
          themeIcon.className = 'fas fa-moon';
        } else {
          themeIcon.className = 'fas fa-sun';
        }
      }
      
      // Ripple effect for buttons
      function createRipple(event, button) {
        const circle = document.createElement('span');
        const diameter = Math.max(button.clientWidth, button.clientHeight);
        const radius = diameter / 2;
        
        circle.style.width = circle.style.height = `${diameter}px`;
        circle.style.left = `${event.clientX - button.getBoundingClientRect().left - radius}px`;
        circle.style.top = `${event.clientY - button.getBoundingClientRect().top - radius}px`;
        circle.classList.add('ripple');
        
        const ripple = button.querySelector('.ripple');
        if (ripple) {
          ripple.remove();
        }
        
        button.appendChild(circle);
      }
      
      // Add ripple effect to all buttons
      const buttons = document.querySelectorAll('button:not(.page-link):not([disabled])');
      buttons.forEach(button => {
        button.addEventListener('click', function(e) {
          if (!this.classList.contains('disabled') && !this.hasAttribute('disabled')) {
            createRipple(e, this);
          }
        });
      });
      
      // Initialize toast
      const toast = document.getElementById('toast');
      const toastMessage = document.querySelector('.toast-message');
      const toastProgress = document.querySelector('.toast-progress');
      
      // Show toast notification
      function showToast(message, type = 'success') {
        // Set message
        toastMessage.textContent = message;
        
        // Set icon based on type
        const toastIcon = document.querySelector('.toast-icon');
        if (type === 'success') {
          toastIcon.className = 'fas fa-check-circle toast-icon success';
        } else if (type === 'error') {
          toastIcon.className = 'fas fa-exclamation-circle toast-icon error';
        } else if (type === 'info') {
          toastIcon.className = 'fas fa-info-circle toast-icon info';
        }
        
        // Show toast
        toast.classList.add('show');
        
        // Reset and start progress bar
        toastProgress.style.transition = 'none';
        toastProgress.style.width = '100%';
        
        // Force reflow to restart animation
        void toastProgress.offsetWidth;
        
        // Start animation
        toastProgress.style.transition = 'width 3s linear';
        toastProgress.style.width = '0%';
        
        
        setTimeout(() => {
          toast.classList.remove('show');
        }, 3000);
      }
      
      
      window.showToast = showToast;
      
      window.copyCoupon = function(id, code) {
        navigator.clipboard.writeText(code).then(() => {
          const btn = document.querySelector(`button[onclick="copyCoupon('${id}', '${code}')"]`);
          const btnText = btn.querySelector('.btn-text');
          const btnIcon = btn.querySelector('i');
          
       
          btn.classList.add('copied');
          btnText.textContent = 'Copied!';
          btnIcon.className = 'fas fa-check';
          
          
          showToast('Coupon code copied to clipboard!', 'success');
          
    
          setTimeout(() => {
            btn.classList.remove('copied');
            btnText.textContent = 'Copy Code';
            btnIcon.className = 'fas fa-copy';
          }, 2000);
        }).catch(err => {
          showToast('Failed to copy code. Please try again.', 'error');
        });
      };
      

      const filterTabs = document.querySelectorAll('.filter-tab');
      const couponCards = document.querySelectorAll('.coupon-card');
      
      filterTabs.forEach(tab => {
        tab.addEventListener('click', function(e) {
          createRipple(e, this);
          

          filterTabs.forEach(t => t.classList.remove('active'));
          
       
          this.classList.add('active');
          
   
          const filter = this.getAttribute('data-filter');
          
          
          couponCards.forEach(card => {
            if (filter === 'all' || card.getAttribute('data-status') === filter) {
              card.style.display = 'flex';
            } else {
              card.style.display = 'none';
            }
          });
          
      
          showToast(`Showing ${filter === 'all' ? 'all' : filter} coupons`, 'info');
        });
      });
      
 
      const searchInput = document.getElementById('couponSearch');
      
      searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        
        couponCards.forEach(card => {
          const couponCode = card.querySelector('.coupon-title').textContent.toLowerCase();
          const couponDesc = card.querySelector('.coupon-description').textContent.toLowerCase();
          
          if (couponCode.includes(searchTerm) || couponDesc.includes(searchTerm)) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });
        
        // If search term is not empty and we have results, show toast
        if (searchTerm) {
          const visibleCards = document.querySelectorAll('.coupon-card[style="display: flex;"]');
          if (visibleCards.length > 0) {
            showToast(`Found ${visibleCards.length} matching coupon${visibleCards.length !== 1 ? 's' : ''}`, 'info');
          }
        }
      });
      
 
      const sortBtn = document.querySelector('.sort-btn');
      const sortDropdown = document.querySelector('.sort-dropdown-menu');
      
      sortBtn.addEventListener('click', function() {
        sortDropdown.classList.toggle('show');
      });
      
    
      document.addEventListener('click', function(event) {
        if (!event.target.closest('.sort-dropdown')) {
          sortDropdown.classList.remove('show');
        }
      });
      
    
      const sortOptions = document.querySelectorAll('.sort-dropdown-menu a');
      
      sortOptions.forEach(option => {
        option.addEventListener('click', function(e) {
          e.preventDefault();
          
          const sortValue = this.getAttribute('data-sort');
          const couponCardsArray = Array.from(couponCards);
          
          
          couponCardsArray.sort((a, b) => {
            if (sortValue === 'expiry-asc') {
              const dateA = new Date(a.querySelector('.detail-item:nth-child(2) span').textContent.replace('Valid till ', ''));
              const dateB = new Date(b.querySelector('.detail-item:nth-child(2) span').textContent.replace('Valid till ', ''));
              return dateA - dateB;
            } else if (sortValue === 'expiry-desc') {
              const dateA = new Date(a.querySelector('.detail-item:nth-child(2) span').textContent.replace('Valid till ', ''));
              const dateB = new Date(b.querySelector('.detail-item:nth-child(2) span').textContent.replace('Valid till ', ''));
              return dateB - dateA;
            } else if (sortValue === 'discount-asc') {
              const discountA = parseInt(a.querySelector('.discount-value').textContent);
              const discountB = parseInt(b.querySelector('.discount-value').textContent);
              return discountA - discountB;
            } else if (sortValue === 'discount-desc') {
              const discountA = parseInt(a.querySelector('.discount-value').textContent);
              const discountB = parseInt(b.querySelector('.discount-value').textContent);
              return discountB - discountA;
            }
          });
          
       
          const couponsGrid = document.querySelector('.coupons-grid');
          couponCardsArray.forEach(card => {
            couponsGrid.appendChild(card);
          });
          
         
          sortDropdown.classList.remove('show');
          
          // Show sort applied toast
          let sortMessage = '';
          if (sortValue === 'expiry-asc') sortMessage = 'Sorted by expiry date (nearest first)';
          if (sortValue === 'expiry-desc') sortMessage = 'Sorted by expiry date (furthest first)';
          if (sortValue === 'discount-asc') sortMessage = 'Sorted by discount (low to high)';
          if (sortValue === 'discount-desc') sortMessage = 'Sorted by discount (high to low)';
          
          showToast(sortMessage, 'info');
        });
      });
      
      // Show welcome toast on page load
      setTimeout(() => {
        showToast('Welcome to your coupon collection!', 'info');
      }, 500);
    });
  </script>
</body>
</html>