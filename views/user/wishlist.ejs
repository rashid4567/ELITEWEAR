<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Elite Wear - My Wishlist</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/userStyle/wishlist.css" />
    <link rel="stylesheet" href="/userStyle/header.css">
    <link rel="stylesheet" href="/userStyle/footer.css">
    <link rel="stylesheet" href="/userStyle/sidebarpartials.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <script>
      // Set the header background type for the wishlist page
      document.body.setAttribute('data-header-bg', 'light');
    </script>
    
    <%- include("../partials/user/header") %>

    <div class="container-fluid py-4">
      <div class="row">
        <!-- Left Column - Sidebar -->
        <div class="col-lg-3 col-md-4 mb-4">
          <%- include("../partials/user/profileSidebar") %>
        </div>

        <!-- Right Column - Wishlist Content -->
        <div class="col-lg-9 col-md-8">
          <div class="wishlist-container">
            <div class="wishlist-header-wrapper">
              <div class="wishlist-header">
                <h2 class="fw-semibold">My Wishlist <span class="wishlist-count">(<%= products.length %>)</span></h2>
                <div class="wishlist-actions">
                  <% if(products.length > 0) { %>
                    <button class="btn empty-wishlist-btn" id="empty-wishlist-btn">
                      <i class="fas fa-trash-alt me-2"></i>Empty Wishlist
                    </button>
                  <% } %>
                </div>
              </div>
            </div>

            <% if(products.length > 0) { %>
              <div class="row g-4 wishlist-grid" id="wishlist-items">
                <% for(let product of products) { %>
                  <div class="col-lg-6 col-md-12 wishlist-item" data-product-id="<%= product._id %>">
                    <div class="product-card">
                      <div class="product-discount-tag">
                        <% if (product.offer) { %>
                          <span><%= product.offer %>% OFF</span>
                        <% } %>
                      </div>
                      <div class="product-image">
                        <img
                          src="<%= product.images && product.images.length > 0 ? product.images[0].url : '/api/placeholder/300/300' %>"
                          alt="<%= product.name || 'Product Image' %>"
                          class="img-fluid"
                        />
                      </div>
                      <div class="product-info">
                        <h3 class="product-title">
                          <%= product.name || 'Unnamed Product' %>
                        </h3>
                        <div class="product-price">
                          <span class="current-price">₹<%= product.variants[0].salePrice?.toFixed(0) || 'N/A' %></span>
                          <% if (product.variants && product.variants.length > 0 && product.variants[0].size) { %>
                            <span class="product-size">₹<%= product.variants[0].size || 'N/A' %></span>
                          <% } else { %>
                            <span class="product-size">N/A</span>
                          <% } %>
                        </div>
                        
                        <% if (product.variants && product.variants.length > 0) { %>
                          <div class="size-selector">
                            <select class="form-select size-select" data-product-id="<%= product._id %>">
                              <option value="">Select Size</option>
                              <% product.variants.forEach(variant => { %>
                                <option value="<%= variant.size %>"><%= variant.size %></option>
                              <% }) %>
                            </select>
                          </div>
                        <% } %>
                        
                        <div class="product-actions">
                          <a href="/productdetails/<%= product._id %>" class="btn view-product-btn">
                            View Product
                          </a>
                          <div class="action-buttons">
                            <button class="btn add-to-cart-btn" data-product-id="<%= product._id %>">
                              Add To Cart
                            </button>
                            <button class="btn remove-btn" data-product-id="<%= product._id %>">
                              Remove
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } else { %>
              <div id="empty-wishlist-message" class="empty-wishlist-container">
                <div class="empty-wishlist-icon">
                  <i class="far fa-heart"></i>
                </div>
                <h3>Your wishlist is empty</h3>
                <p>Items added to your wishlist will be saved here</p>
                <div class="mt-4">
                  <a href="/allproduct" class="btn continue-shopping-btn">
                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                  </a>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div
        id="wishlistToast"
        class="toast align-items-center border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="d-flex">
          <div class="toast-body" id="toastBody"></div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>

    <!-- Confirm Empty Modal -->
    <div
      class="modal fade"
      id="confirmEmptyModal"
      tabindex="-1"
      aria-labelledby="confirmEmptyModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmEmptyModalLabel">
              Clear Wishlist
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="text-center mb-3">
              <i class="fas fa-exclamation-triangle text-warning modal-icon"></i>
            </div>
            <p class="text-center">Are you sure you want to remove all items from your wishlist?</p>
            <p class="text-center text-muted small">This action cannot be undone</p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-outline-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="button" class="btn btn-danger" id="confirm-delete">
              Yes, Clear All
            </button>
          </div>
        </div>
      </div>
    </div>

    <%- include("../partials/user/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const wishlistToast = new bootstrap.Toast(
          document.getElementById("wishlistToast")
        );
        const confirmEmptyModal = new bootstrap.Modal(
          document.getElementById("confirmEmptyModal")
        );

        function showToast(message, isSuccess = true) {
          const toastBody = document.getElementById("toastBody");
          toastBody.innerHTML = `
            <i class="fas fa-${isSuccess ? 'check-circle' : 'exclamation-circle'} me-2"></i>
            ${message}
          `;
          const toast = document.getElementById("wishlistToast");
          toast.className = `toast align-items-center text-white bg-${isSuccess ? 'success' : 'danger'} border-0`;
          wishlistToast.show();
        }

        function updateWishlistUI(wishlistCount, productId = null) {
          const wishlistHeader = document.querySelector(".wishlist-count");
          wishlistHeader.textContent = `(${wishlistCount})`;

          if (productId) {
            const productCard = document.querySelector(
              `.wishlist-item[data-product-id="${productId}"]`
            );
            if (productCard) {
              productCard.style.transition = "all 0.5s ease";
              productCard.style.opacity = "0";
              productCard.style.transform = "translateY(20px)";
              setTimeout(() => {
                productCard.remove();
                checkEmptyWishlist(wishlistCount);
              }, 500);
            }
          } else {
            checkEmptyWishlist(wishlistCount);
          }
        }

        function checkEmptyWishlist(wishlistCount) {
          if (wishlistCount === 0) {
            const wishlistContainer = document.getElementById("wishlist-items");
            const emptyWishlistBtn = document.getElementById("empty-wishlist-btn");
            
            if (emptyWishlistBtn) {
              emptyWishlistBtn.style.display = "none";
            }
            
            if (wishlistContainer) {
              wishlistContainer.outerHTML = `
                <div id="empty-wishlist-message" class="empty-wishlist-container">
                  <div class="empty-wishlist-icon">
                    <i class="far fa-heart"></i>
                  </div>
                  <h3>Your wishlist is empty</h3>
                  <p>Items added to your wishlist will be saved here</p>
                  <div class="mt-4">
                    <a href="/allproduct" class="btn continue-shopping-btn">
                      <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                    </a>
                  </div>
                </div>
              `;
            }
          }
        }

        // Add to cart functionality
        document.querySelectorAll(".add-to-cart-btn").forEach((button) => {
          button.addEventListener("click", async function () {
            const productId = this.getAttribute("data-product-id");
            const sizeSelect = document.querySelector(`.size-select[data-product-id="${productId}"]`);
            const size = sizeSelect ? sizeSelect.value : null;
            
            if (!productId) {
              showToast("Error: Product ID missing", false);
              return;
            }

            if (sizeSelect && !size) {
              showToast("Please select a size", false);
              return;
            }

            // Add loading state
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
            this.disabled = true;

            try {
              const response = await fetch("/add-to-cart-remove-wishlist", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId, quantity: 1, size }),
                credentials: "include",
              });
              const data = await response.json();

              showToast(data.message, data.success);
              if (data.success) {
                updateWishlistUI(data.wishlistCount, productId);
              } else {
                // Reset button if failed
                this.innerHTML = originalText;
                this.disabled = false;
              }
            } catch (error) {
              console.error("Error adding to cart:", error);
              showToast("Failed to add to cart", false);
              this.innerHTML = originalText;
              this.disabled = false;
            }
          });
        });

        // Remove from wishlist functionality
        document.querySelectorAll(".remove-btn").forEach((button) => {
          button.addEventListener("click", async function () {
            const productId = this.getAttribute("data-product-id");
            if (!productId) {
              showToast("Error: Product ID missing", false);
              return;
            }

            // Add loading state
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Removing...';
            this.disabled = true;

            try {
              const response = await fetch("/wishlist/remove", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId }),
                credentials: "include",
              });
              const data = await response.json();

              showToast(data.message, data.success);
              if (data.success) {
                updateWishlistUI(data.wishlistCount, productId);
              } else {
                // Reset button if failed
                this.innerHTML = originalText;
                this.disabled = false;
              }
            } catch (error) {
              console.error("Error removing from wishlist:", error);
              showToast("Failed to remove product", false);
              this.innerHTML = originalText;
              this.disabled = false;
            }
          });
        });

        // Empty wishlist functionality
        const emptyWishlistBtn = document.getElementById("empty-wishlist-btn");
        if (emptyWishlistBtn) {
          emptyWishlistBtn.addEventListener("click", function () {
            confirmEmptyModal.show();
          });
        }

        document
          .getElementById("confirm-delete")
          .addEventListener("click", async function () {
            // Add loading state
            const button = this;
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Clearing...';
            button.disabled = true;

            try {
              const response = await fetch("/wishlist/empty", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                credentials: "include",
              });
              const data = await response.json();

              showToast(data.message, data.success);
              if (data.success) {
                updateWishlistUI(0);
              } else {
                // Reset button if failed
                button.innerHTML = originalText;
                button.disabled = false;
              }
            } catch (error) {
              console.error("Error emptying wishlist:", error);
              showToast("Failed to empty wishlist", false);
              button.innerHTML = originalText;
              button.disabled = false;
            } finally {
              confirmEmptyModal.hide();
            }
          });
      });
    </script>
  </body>
</html>
