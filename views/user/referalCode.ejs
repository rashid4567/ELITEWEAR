<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Referral Code - Elite Wear</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/userStyle/referalCode.css">
    <style>
        .referral-section {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 30px;
            margin-bottom: 30px;
        }
        .referral-title {
            color: #333;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;
        }
        .referral-card {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 25px;
        }
        .referral-description {
            color: #555;
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 25px;
        }
        .referral-code-box {
            background-color: white;
            border: 2px dashed #007bff;
            border-radius: 6px;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .referral-code-box span {
            font-size: 24px;
            font-weight: 600;
            letter-spacing: 2px;
            color: #333;
        }
        .copy-icon {
            font-size: 22px;
            color: #007bff;
            cursor: pointer;
            padding: 8px;
            border-radius: 4px;
            transition: all 0.2s;
        }
        .copy-icon:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }
        .copy-success {
            display: none;
            color: #28a745;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }
        .share-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }
        .share-button {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 8px 15px;
            display: flex;
            align-items: center;
            gap: 8px;
            color: #495057;
            text-decoration: none;
            transition: all 0.2s;
        }
        .share-button:hover {
            background-color: #e9ecef;
            color: #212529;
        }
    </style>
</head>
<body>
    <%- include("../partials/user/header") %>

    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-dark">Profile</a></li>
                <li class="breadcrumb-item active">Referral Code</li>
            </ol>
        </nav>

        <div class="row">
            <%- include("../partials/user/profileSidebar") %>
            
            <div class="col-lg-9">
                <div class="referral-section">
                    <h2 class="referral-title">My Referral Code</h2>
                    
                    <div class="referral-card">
                        <p class="referral-description">
                            Invite your friends and earn rewards! Share your unique referral code to get ₹200 credited to 
                            your wallet when they join, and your friend receives ₹100 too. Spread the word and start earning 
                            together!
                        </p>
                        
                        <div class="referral-code-box">
                            <span id="referralCodeText"><%= user.referralCode %></span>
                            <i class="bi bi-clipboard copy-icon" id="copyButton"></i>
                        </div>
                        <p id="copySuccess" class="copy-success">Referral code copied to clipboard!</p>
                        
                        <div class="share-buttons">
                            <a href="https://wa.me/?text=Use my referral code <%= user.referralCode %> to sign up on Elite Wear and get ₹100 bonus! https://elitewear.com/signup" target="_blank" class="share-button">
                                <i class="bi bi-whatsapp"></i> WhatsApp
                            </a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=https://elitewear.com/signup&quote=Use my referral code <%= user.referralCode %> to sign up on Elite Wear and get ₹100 bonus!" target="_blank" class="share-button">
                                <i class="bi bi-facebook"></i> Facebook
                            </a>
                            <a href="mailto:?subject=Join Elite Wear with my referral code&body=Use my referral code <%= user.referralCode %> to sign up on Elite Wear and get ₹100 bonus! https://elitewear.com/signup" class="share-button">
                                <i class="bi bi-envelope"></i> Email
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="referral-section">
                    <h2 class="referral-title">Referral Statistics</h2>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Total Referrals</h5>
                                    <p class="card-text fs-2 fw-bold"><%= referralStats?.total || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Earnings</h5>
                                    <p class="card-text fs-2 fw-bold">₹<%= referralStats?.earnings || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Pending</h5>
                                    <p class="card-text fs-2 fw-bold"><%= referralStats?.pending || 0 %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include("../partials/user/footer") %>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const copyButton = document.getElementById('copyButton');
            const referralCodeText = document.getElementById('referralCodeText');
            const copySuccess = document.getElementById('copySuccess');
            
            copyButton.addEventListener('click', function() {
                const code = referralCodeText.textContent;
                
                if (navigator.clipboard) {
                    navigator.clipboard.writeText(code)
                        .then(() => {
                            showCopySuccess();
                        })
                        .catch(err => {
                            console.error('Could not copy text: ', err);
                            fallbackCopyTextToClipboard(code);
                        });
                } else {
                    fallbackCopyTextToClipboard(code);
                }
            });
            
            function fallbackCopyTextToClipboard(text) {
                const textArea = document.createElement('textarea');
                textArea.value = text;
                textArea.style.position = 'fixed';
                textArea.style.left = '-999999px';
                textArea.style.top = '-999999px';
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                
                try {
                    const successful = document.execCommand('copy');
                    if (successful) {
                        showCopySuccess();
                    } else {
                        console.error('Failed to copy');
                    }
                } catch (err) {
                    console.error('Error during copy', err);
                }
                
                document.body.removeChild(textArea);
            }
            
            function showCopySuccess() {
                copySuccess.style.display = 'block';
                setTimeout(() => {
                    copySuccess.style.display = 'none';
                }, 3000);
            }
        });
    </script>
</body>
</html>