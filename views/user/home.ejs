    <!-- Add this script to fix image rendering issues -->
    <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Fix for trending product images
      const trendingImages = document.querySelectorAll('.trending-item .product-image');
      
      trendingImages.forEach((img) => {
        // Force image display properties
        img.style.display = "block";
        img.style.opacity = "1";
        img.style.visibility = "visible";
        
        // Add error handling
        img.onerror = function() {
          this.src = '/placeholder.svg?height=300&width=300&query=fashion+product';
        };
      });
    });
    </script>

