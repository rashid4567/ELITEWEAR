  font-size: 12rem;
  font-family: var(--font-secondary);
  position: absolute;
  top: -2rem;
  right: -1rem;
  color: var(--accent-color);
  opacity: 0.03;
  z-index: 0;
  transition: all var(--transition-normal);
}

.review-card:hover::after {
  transform: rotate(10deg) scale(1.1);
  opacity: 0.05;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  position: relative;
  z-index: 2;
}

.review-rating {
  display: flex;
  gap: 0.25rem;
  color: var(--warning-color);
}

.review-product {
  font-size: 0.85rem;
  color: var(--text-light);
  font-style: italic;
}

.review-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 1rem;
  position: relative;
  z-index: 2;
  transition: color var(--transition-normal);
}

.review-card:hover .review-title {
  color: var(--accent-color);
}

.review-content {
  flex: 1;
  margin-bottom: 1.5rem;
  position: relative;
  z-index: 2;
}

.review-text {
  font-size: 1rem;
  color: var(--text-secondary);
  line-height: 1.6;
  font-style: italic;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.review-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 2;
}

.reviewer {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.reviewer-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid transparent;
  background: var(--gradient-primary);
  padding: 2px;
  transition: transform var(--transition-normal);
}

.review-card:hover .reviewer-avatar {
  transform: scale(1.1);
}

.reviewer-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--accent-color);
  color: white;
  font-size: 1.5rem;
  font-weight: 600;
  border-radius: 50%;
}

.reviewer-info h5 {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.reviewer-info p {
  font-size: 0.85rem;
  color: var(--text-light);
  margin: 0;
}

.review-date {
  font-size: 0.85rem;
  color: var(--text-light);
}

.helpful-badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: rgba(16, 185, 129, 0.1);
  color: var(--success-color);
  padding: 0.35rem 0.75rem;
  border-radius: var(--border-radius-full);
  font-size: 0.8rem;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.35rem;
  z-index: 3;
}

.helpful-badge i {
  font-size: 0.75rem;
}

.reviews-swiper .swiper-pagination {
  bottom: -10px;
}

.reviews-swiper .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--text-light);
  opacity: 0.5;
  transition: all var(--transition-normal);
}

.reviews-swiper .swiper-pagination-bullet-active {
  opacity: 1;
  background: var(--accent-color);
  width: 25px;
  border-radius: 10px;
}

.reviews-navigation {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  z-index: 10;
  pointer-events: none;
  display: flex;
  justify-content: space-between;
  padding: 0 1rem;
}

.reviews-button-prev,
.reviews-button-next {
  width: 40px;
  height: 40px;
  background: var(--card-bg);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--card-shadow);
  cursor: pointer;
  transition: all var(--transition-normal);
  pointer-events: auto;
  color: var(--text-primary);
}

.reviews-button-prev:hover,
.reviews-button-next:hover {
  background: var(--accent-color);
  color: white;
  transform: scale(1.1);
}

.reviews-button-prev::after,
.reviews-button-next::after {
  content: none;
}

.reviews-cta {
  text-align: center;
  margin-top: 2rem;
}

.btn-view-all-reviews {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--gradient-primary);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: var(--border-radius-full);
  font-weight: 500;
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.btn-view-all-reviews::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--gradient-secondary);
  z-index: -1;
  opacity: 0;
  transition: opacity var(--transition-normal);
}

.btn-view-all-reviews:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
  color: white;
}

.btn-view-all-reviews:hover::before {
  opacity: 1;
}

.btn-view-all-reviews i {
  transition: transform var(--transition-normal);
}

.btn-view-all-reviews:hover i {
  transform: translateX(5px);
}

/* Empty state */
.no-reviews {
  text-align: center;
  padding: 3rem;
  background-color: var(--card-bg);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--card-shadow);
}

.no-reviews-icon {
  font-size: 3rem;
  color: var(--text-light);
  margin-bottom: 1rem;
}

.no-reviews p {
  color: var(--text-secondary);
  font-size: 1.1rem;
  margin-bottom: 1.5rem;
}

/* Responsive styles */
@media (max-width: 991.98px) {
  .reviews-navigation {
    display: none;
  }
}

@media (max-width: 767.98px) {
  .review-card {
    padding: 1.5rem;
  }

  .review-title {
    font-size: 1.1rem;
  }

  .review-text {
    font-size: 0.95rem;
    -webkit-line-clamp: 3;
  }

  .reviewer-avatar {
    width: 40px;
    height: 40px;
  }

  .avatar-placeholder {
    font-size: 1.2rem;
  }

  .helpful-badge {
    top: 0.75rem;
    right: 0.75rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
  }
}

@media (max-width: 575.98px) {
  .customer-reviews-section {
    padding: 3rem 0;
  }

  .review-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .review-footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .review-date {
    font-size: 0.8rem;
  }
}

/* Animation for review cards */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.review-card {
  animation: fadeInUp 0.6s ease-out forwards;
}

/* Shimmer effect for review cards */
.shimmer {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    to right,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.1) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  transform: rotate(30deg);
  animation: shimmer 6s infinite;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}

.review-card:hover .shimmer {
  opacity: 1;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) rotate(30deg);
  }
  100% {
    transform: translateX(100%) rotate(30deg);
  }
}

/* Read more button for reviews */
.read-more-btn {
  background: none;
  border: none;
  color: var(--accent-color);
  font-size: 0.9rem;
  padding: 0;
  margin-top: 0.5rem;
  cursor: pointer;
  font-weight: 500;
  transition: all var(--transition-fast);
}
