            document.addEventListener('mouseup', () => {
                cursorGlow.style.width = '20px';
                cursorGlow.style.height = '20px';
                cursorGlow.style.opacity = '0.5';
            });

            // Initialize Swiper carousels
            const heroSwiper = new Swiper('.hero-swiper', {
                slidesPerView: 1,
                spaceBetween: 0,
                loop: true,
