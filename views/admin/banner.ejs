    <%- include("../partials/admin/header") %>  

    <div class="main-content">
        <div class="page-header">
            <div>
                <h2>Banners</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Sales Report</li>
                    </ol>
                </nav>
            </div>
            <div class="user-profile">
                <img src="/api/placeholder/40/40" alt="User Avatar">
                <div>
                    <div>Aimad</div>
                    <small class="text-muted">Admin</small>
                </div>
            </div>
        </div>

        <div class="search-sort-filter">
            <div class="search-container">
                <i class="bi bi-search"></i>
                <input type="text" class="form-control" placeholder="Search banner by title...">
            </div>
            
            <div class="dropdown sort-dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Sort
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                    <li><a class="dropdown-item" href="#">more days left</a></li>
                    <li><a class="dropdown-item" href="#">less days left</a></li>
                    <li><a class="dropdown-item" href="#">Last added first</a></li>
                </ul>
            </div>
            
            <div class="filter-pills">
                <button class="btn btn-outline-secondary active">ALL</button>
                <button class="btn btn-outline-secondary">ACTIVE</button>
                <button class="btn btn-outline-secondary">INACTIVE</button>
            </div>
        </div>

        <div class="banner-table">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Starting Date</th>
                        <th>Ending Date</th>
                        <th>Status</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(locals.data){%>
                        <%for(let i=0; i<data.length; i++){%>
                    <tr>
                        <td><img src="<%= data[i].images && data[i].images.length > 0 ? data[i].images[0].url : 'https://via.placeholder.com/60' %>" alt="Shirts Banner"></td>
                        <td><%data[i].title%></td>
                        <td><%data.Starting-date%></td>
                        <td><%data.Ending-date%></td>
                        <td>5 days left</td>
                        <td class="action-buttons">
                            <a class="edit" href="/admin/editBaner?id=<%=data[i]._id%>"><i class="bi bi-pencil"></i></a>
                            <a class="delete" href="/admin/deleteBaner?id=<%=data[i]._id%>"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                <%}%>
                <%}else{%>
                    No Banner found
                    <%}%>
                </tbody>
            </table>
        </div>
        
        <a href="/admin/addBanner" class="add-banner-btn">ADD BANNER</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
