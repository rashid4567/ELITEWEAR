<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/adminStyle/dashboard.css">
</head>
<body>
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-brand">
            <h2>ELITE WEAR</h2>
        </div>
        <div class="sidebar-menu">
            <div class="menu-item active">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-box"></i>
                <span>Products</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
            <div class="menu-item">
                <i class="fas fa-list"></i>
                <span>Order List</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
            <div class="menu-item">
                <i class="fas fa-user"></i>
                <span>Customer</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
            <div class="menu-item">
                <i class="fas fa-chart-line"></i>
                <span>Sales</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
            <div class="menu-item">
                <i class="fas fa-tag"></i>
                <span>Category</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
            <div class="menu-item">
                <i class="fas fa-percent"></i>
                <span>Coupons</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
            <div class="menu-item">
                <i class="fas fa-image"></i>
                <span>Banner</span>
                <i class="fas fa-chevron-right arrow"></i>
            </div>
        </div>
        <div class="sidebar-footer">
            <button class="btn">Account</button>
            <a href="/admin/logout" class="btn btn-logout">Logout</a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <button class="mobile-toggle" id="toggle-sidebar">
                <i class="fas fa-bars"></i>
            </button>
            <div class="admin-profile">
                <div class="admin-avatar">
                    <img src="/api/placeholder/40/40" alt="Admin Avatar">
                </div>
                <div class="admin-info">
                    <span class="admin-name">RASHID C</span>
                    <span class="admin-role">Admin</span>
                </div>
                <i class="fas fa-chevron-down ml-2"></i>
            </div>
        </header>

        <!-- Dashboard Content -->
        <div class="dashboard">
            <!-- Metrics -->
            <div class="metrics">
                <div class="metric-card">
                    <div class="metric-icon blue-bg">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="metric-details">
                        <h3>5,423</h3>
                        <p>Total Customers <span class="progress-metric">↑16% this month</span></p>
                    </div>
                </div>
                <div class="metric-card">
                    <div class="metric-icon blue-bg">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div class="metric-details">
                        <h3>1,893</h3>
                        <p>Total Orders</p>
                    </div>
                </div>
                <div class="metric-card">
                    <div class="metric-icon blue-bg">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div class="metric-details">
                        <h3>₹65,805</h3>
                        <p>Total Sales</p>
                    </div>
                </div>
                <div class="metric-card">
                    <div class="metric-icon blue-bg">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="metric-details">
                        <h3>189</h3>
                        <p>Total Pending</p>
                    </div>
                </div>
            </div>
            
            <!-- Welcome Message -->
            <div class="welcome-card">
                <h2>Welcome to Elite Wear Dashboard</h2>
                <p>
                    View and manage your store information from this central dashboard. 
                    The key metrics above provide a quick overview of your store performance.
                    Use the sidebar menu to navigate to different sections of your admin panel.
                </p>
            </div>
        </div>
    </main>

    <script>
        // Toggle sidebar on mobile
        document.getElementById('toggle-sidebar').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.getElementById('toggle-sidebar');
            
            if (window.innerWidth <= 768 && 
                !sidebar.contains(event.target) && 
                !toggleBtn.contains(event.target) && 
                sidebar.classList.contains('active')) {
                sidebar.classList.remove('active');
            }
        });
    </script>
</body>
</html>