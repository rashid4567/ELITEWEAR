<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Secure admin login portal">
    <!-- Security headers - Modified to allow inline scripts -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data:;">
    <meta http-equiv="X-Frame-Options" content="DENY">
    <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta name="referrer" content="no-referrer">
    
    <title>Admin Portal | Secure Login</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/admin-favicon.png" type="image/x-icon">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/adminStyle/login.css">

<!-- Add a fallback mechanism in case the CSS/JS fails -->
<style>
    /* Critical CSS to ensure form visibility */
    .login-container {
        display: block !important;
        visibility: visible !important;
        opacity: 1 !important;
        transform: none !important;
    }
    
    /* Ensure proper layout on all devices */
    @media (max-width: 767.98px) {
        .admin-login-wrapper {
            display: block;
            min-height: 100vh;
        }
        
        .login-panel {
            min-height: 100vh;
            padding: 2rem 1rem;
        }
    }
    
    /* Fix for password toggle button */
    .toggle-password {
        cursor: pointer !important;
        z-index: 10 !important;
        height: 100% !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }
    
    /* Ensure the password toggle is visible and clickable */
    .input-group .toggle-password {
        position: relative !important;
        z-index: 5 !important;
    }
    
    /* Make sure the icon is visible */
    .toggle-password i {
        pointer-events: none !important;
    }
</style>

<!-- Add a noscript tag to handle cases where JavaScript is disabled -->
<noscript>
    <style>
        .login-container {
            display: block !important;
            visibility: visible !important;
            opacity: 1 !important;
            transform: none !important;
        }
    </style>
</noscript>
</head>
<body>
    <!-- Animated Background -->
    <div class="animated-background">
        <div class="gradient-bg"></div>
        <div class="particles">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>

    <div class="admin-login-wrapper">
        <!-- Left panel with branding -->
        <div class="brand-panel d-none d-md-flex">
            <div class="brand-content">
                <div class="logo-container">
                    <i class="fa-solid fa-shield-halved"></i>
                </div>
                <h1 class="brand-title">Admin Portal</h1>
                <p class="brand-tagline">Secure management dashboard access</p>
                
                <div class="security-badge">
                    <i class="fa-solid fa-lock"></i>
                    <span>Enhanced Security Zone</span>
                </div>
                
                <div class="brand-features">
                    <div class="feature-item">
                        <i class="fa-solid fa-check-circle"></i>
                        <span>Advanced Security</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa-solid fa-gauge-high"></i>
                        <span>Intuitive Dashboard</span>
                    </div>
                    <div class="feature-item">
                        <i class="fa-solid fa-chart-line"></i>
                        <span>Real-time Analytics</span>
                    </div>
                </div>
            </div>
            
            <div class="brand-footer">
                <p>&copy; <%= new Date().getFullYear() %> Your Company. All rights reserved.</p>
            </div>
        </div>
        
        <!-- Right panel with login form -->
        <div class="login-panel">
            <div class="login-container">
                <!-- Mobile logo (visible only on small screens) -->
                <div class="mobile-logo d-flex d-md-none">
                    <i class="fa-solid fa-shield-halved"></i>
                    <h2 class="mobile-title">Admin Portal</h2>
                </div>
                
                <h2 class="login-title">Administrator Login</h2>
                <p class="login-subtitle">Enter your credentials to access the admin dashboard</p>
                
                <!-- Alert messages -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert <%= message.includes('success') ? 'alert-success' : 'alert-danger' %> alert-dismissible fade show" role="alert">
                        <i class="fa-solid <%= message.includes('success') ? 'fa-check-circle' : 'fa-exclamation-circle' %> me-2"></i>
                        <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <!-- Login form -->
                <form id="adminLoginForm" action="/admin/login" method="POST" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                name="email" 
                                placeholder="admin@example.com" 
                                required
                                autocomplete="username"
                                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                            >
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            <input 
                                type="password" 
                                class="form-control" 
                                id="password" 
                                name="password" 
                                placeholder="••••••••" 
                                required
                                autocomplete="current-password"
                                minlength="8"
                            >
                            <span 
                                class="input-group-text toggle-password" 
                                id="togglePasswordBtn"
                                style="cursor: pointer;"
                            >
                                <i class="fa-solid fa-eye" id="toggleIcon"></i>
                            </span>
                            <div class="invalid-feedback">
                                Password must be at least 8 characters.
                            </div>
                        </div>
                        
                        <!-- Password Strength Meter (hidden by default) -->
                        <div class="password-strength d-none" id="passwordStrength">
                            <div class="strength-meter">
                                <div class="strength-meter-fill" id="strengthMeter"></div>
                            </div>
                            <div class="strength-text" id="strengthText">Password strength</div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary login-btn">
                            <span class="btn-text">Secure Login</span>
                            <i class="fa-solid fa-arrow-right"></i>
                        </button>
                    </div>
                    
                    <div class="security-info">
                        <i class="fa-solid fa-shield-alt"></i>
                        <p>This login page is protected with advanced security measures. All login attempts are monitored and logged.</p>
                    </div>
                </form>
                
                <div class="back-to-site">
                    <a href="/" class="back-link">
                        <i class="fa-solid fa-chevron-left"></i>
                        <span>Back to main site</span>
                    </a>
                </div>
            </div>
            
            <div class="login-footer">
                <p>&copy; <%= new Date().getFullYear() %> Your Company. All rights reserved.</p>
                <p>
                    <a href="/privacy-policy">Privacy Policy</a> • 
                    <a href="/terms-of-service">Terms of Service</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript with inline function for password toggle -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Admin login page loaded');
        
        // Ensure the login container is visible immediately
        const loginContainer = document.querySelector('.login-container');
        if (loginContainer) {
            loginContainer.style.display = 'block';
            loginContainer.style.visibility = 'visible';
            loginContainer.style.opacity = '1';
            
            // Add the animation class after a short delay
            setTimeout(() => {
                loginContainer.classList.add('fade-in-up');
            }, 100);
        }
        
        // Password toggle button - FIXED VERSION
        const toggleBtn = document.getElementById('togglePasswordBtn');
        const passwordField = document.getElementById('password');
        const toggleIcon = document.getElementById('toggleIcon');
        
        if (toggleBtn && passwordField && toggleIcon) {
            console.log('Toggle button and password field found');
            
            // Use direct event listener
            toggleBtn.addEventListener('click', function() {
                console.log('Toggle button clicked');
                
                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    toggleIcon.classList.remove('fa-eye');
                    toggleIcon.classList.add('fa-eye-slash');
                    console.log('Password visible');
                } else {
                    passwordField.type = 'password';
                    toggleIcon.classList.remove('fa-eye-slash');
                    toggleIcon.classList.add('fa-eye');
                    console.log('Password hidden');
                }
            });
        } else {
            console.error('Toggle button or password field not found!');
        }

        // Password strength meter
        const passwordStrength = document.getElementById('passwordStrength');
        const strengthMeter = document.getElementById('strengthMeter');
        const strengthText = document.getElementById('strengthText');
        
        if (passwordField && passwordStrength && strengthMeter && strengthText) {
            passwordField.addEventListener('input', function() {
                const val = passwordField.value;
                
                if (val.length > 0) {
                    passwordStrength.classList.remove('d-none');
                    
                    // Calculate password strength
                    let strength = 0;
                    
                    // Length check
                    if (val.length >= 8) strength += 25;
                    
                    // Lowercase and uppercase check
                    if (val.match(/[a-z]/) && val.match(/[A-Z]/)) strength += 25;
                    
                    // Number check
                    if (val.match(/\d/)) strength += 25;
                    
                    // Special character check
                    if (val.match(/[^a-zA-Z\d]/)) strength += 25;
                    
                    // Update UI
                    strengthMeter.style.width = strength + '%';
                    
                    if (strength < 25) {
                        strengthMeter.className = 'strength-meter-fill strength-weak';
                        strengthText.textContent = 'Weak password';
                    } else if (strength < 50) {
                        strengthMeter.className = 'strength-meter-fill strength-fair';
                        strengthText.textContent = 'Fair password';
                    } else if (strength < 75) {
                        strengthMeter.className = 'strength-meter-fill strength-good';
                        strengthText.textContent = 'Good password';
                    } else {
                        strengthMeter.className = 'strength-meter-fill strength-strong';
                        strengthText.textContent = 'Strong password';
                    }
                } else {
                    passwordStrength.classList.add('d-none');
                }
            });
        }

        // Form validation
        const form = document.getElementById('adminLoginForm');
        
        if (form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                form.classList.add('was-validated');
            });
        }

        // Reset attempts on successful login
        const hasSuccessMessage = <%= typeof message !== 'undefined' && message && message.includes('success') ? 'true' : 'false' %>;
        if (hasSuccessMessage) {
            localStorage.setItem('adminLoginAttempts', '0');
        }
    });
    </script>
</body>
</html>