          confirmButtonColor: "#6366f1",
        })

        return true
      } else {
        if (skuInput.value.match(/^[A-Za-z0-9-_]+$/)) {
          skuInput.classList.remove("is-invalid")
          skuInput.classList.add("is-valid")
          isSkuValid = true
        }
        return false
