<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Product Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/adminStyle/productManagment.css">
</head>
<body>
    <%- include("../partials/admin/header") %> 
    <div class="container my-5">
        <!-- Header Section -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Products</li>
            </ol>
        </nav>
        <div class="products-header d-flex justify-content-between align-items-center">
            <h1>Products</h1>
            <div class="d-flex align-items-center">
                <div class="search-bar me-3">
                    <i class="fas fa-search"></i>
                    <input type="text" class="form-control" placeholder="Search product...">
                </div>
                <a href="/admin/addproduct" class="btn btn-add-new">
                    <i class="fas fa-plus me-1"></i> Add New Product
                </a>
            </div>
        </div>

        <!-- Filter and Sort Section -->
        <div class="filter-sort-section d-flex justify-content-between align-items-center">
            <div>
                <span class="me-2 fw-medium">Filter By</span>
                <button class="btn">Product Category <i class="fas fa-chevron-down ms-1"></i></button>
                <button class="btn">Price <i class="fas fa-chevron-down ms-1"></i></button>
            </div>
            <div>
                <span class="me-2 fw-medium">Sort</span>
                <button class="btn">Price High-Low</button>
                <button class="btn">Price Low-High</button>
                <button class="btn">Last added first</button>
            </div>
        </div>

        <!-- Product Table -->
        <div class="table-container">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>IMAGE</th>
                        <th>PRODUCT NAME</th>
                        <th>CATEGORY</th>
                        <th>PRICE</th>
                        <th>STOCK</th>
                        <th>LIST</th>
                        <th>ACTION</th>
                        <th>OFFER</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = data.length - 1; i >= 0; i--) { %>
                        <tr data-id="<%= data[i]._id %>">
                            <td>
                                <img 
                                    src="<%= data[i].images && data[i].images.length > 0 ? data[i].images[0].url : 'https://via.placeholder.com/60' %>" 
                                    alt="Product Image" 
                                    class="product-img"
                                >
                            </td>
                            <td><%= data[i].name %></td>
                            <td><%= data[i].categoryId && data[i].categoryId.name ? data[i].categoryId.name : 'N/A' %></td>
                            <td>₹<%= data[i].salePrice || 0 %></td>
                            <td><%= data[i].quantity || 0 %></td>
                            <td>
                                <label class="toggle-switch">
                                    <input type="checkbox" <%= data[i].isActive ? 'checked' : '' %>>
                                    <span class="slider"></span>
                                </label>
                            </td>
                            <td>
                                <button class="action-btn">
                                    <a href="/admin/editProduct/<%= data[i]._id %>"><i class="fas fa-edit"></i></a>
                                </button>
                                <button class="action-btn delete-btn" data-id="<%= data[i]._id %>" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                            <td><span class="offer-text"><%= data[i].offer %>% Off</span></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination Section -->
        <div class="pagination-section">
            <span>Showing 1-5 from 25</span>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a></li>
                </ul>
            </nav>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade custom-modal" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">ARE YOU SURE!!!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">×</button>
                </div>
                <div class="modal-body">
                    Do you want to delete the product
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">YES Delete</button>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>


    <script>
      document.addEventListener('DOMContentLoaded', () => {
    const deleteButtons = document.querySelectorAll('.delete-btn');
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    let productIdToDelete = null;

    deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
            productIdToDelete = this.getAttribute('data-id');
            console.log('Product to delete:', productIdToDelete);
        });
    });

    document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
        if (!productIdToDelete) {
            console.error('No product ID to delete');
            return;
        }

        try {
            const response = await fetch(`/admin/deleteProduct/${productIdToDelete}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            const data = await response.json();

            if (data.status) {
             
                const row = document.querySelector(`tr[data-id="${productIdToDelete}"]`);
                if (row) row.remove();
                
               
                modal.hide();
                
              e
                alert('Product deleted successfully');
            } else {
                alert(data.message || 'Failed to delete product');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while deleting the product');
        }
    });
});
    </script>
</body>
</html>