<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - Elite Wear</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/userStyle/productSelected.css">
</head>
<body>
    <!-- Header and Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">ELITE WEAR</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Men</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Women</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sale</a>
                        </li>
                    </ul>
                    <form class="d-flex search-bar mx-auto">
                        <input class="form-control me-2" type="search" placeholder="Search products...">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                    <div class="d-flex ms-auto">
                        <a href="#" class="btn btn-link text-white">
                            <i class="fas fa-user"></i>
                        </a>
                        <a href="#" class="btn btn-link text-white">
                            <i class="fas fa-heart"></i>
                        </a>
                        <a href="#" class="btn btn-link text-white">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="badge bg-danger rounded-pill">2</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container my-5">
        <div class="row">
            <!-- Product Images Section -->
            <div class="col-md-6 mb-4">
                <div class="row">
                    <div class="col-2 product-thumbnails">
                        <% product.images.forEach(function(image) { %>
                            <img src="<%= image.url %>" alt="Thumbnail" onclick="changeMainImage(this.src)">
                        <% }); %>
                    </div>
                    <div class="col-10">
                        <img id="mainImage" src="<%= product.images[0].url %>" alt="<%= product.name %>" class="product-main-image">
                    </div>
                </div>
            </div>

            <!-- Product Information Section -->
            <div class="col-md-6">
                <h1 class="mb-2"><%= product.name %></h1>
                <p class="text-muted">Product Code: <%= product.code %></p>
                
                <div class="mb-3">
                    <% for (let i = 0; i < 5; i++) { %>
                        <% if (i < product.ratings.average) { %>
                            <i class="fas fa-star text-warning"></i>
                        <% } else if (i < product.ratings.average + 0.5) { %>
                            <i class="fas fa-star-half-alt text-warning"></i>
                        <% } else { %>
                            <i class="far fa-star text-warning"></i>
                        <% } %>
                    <% } %>
                    <span class="ms-2">(<%= product.reviews.length %> reviews)</span>
                </div>
                
                <div class="mb-3">
                    <span class="fs-4 fw-bold">₹<%= product.price %></span>
                    <% if (totalOffer > 0) { %>
                        <span class="original-price">₹<%= product.originalPrice %></span>
                        <span class="discount-badge"><%= totalOffer %>% OFF</span>
                    <% } %>
                </div>
                
                <div class="mb-3">
                    <% if (product.inStock > 0) { %>
                        <span class="text-success">
                            <i class="fas fa-check-circle"></i> In Stock
                        </span>
                        <% if (product.inStock <= 5) { %>
                            <span class="low-stock ms-2">Only <%= product.inStock %> left!</span>
                        <% } %>
                    <% } else { %>
                        <span class="text-danger">
                            <i class="fas fa-times-circle"></i> Out of Stock
                        </span>
                    <% } %>
                </div>
                
                <div class="mb-4">
                    <label class="form-label">Size:</label>
                    <div class="size-selector">
                        <% product.sizes.forEach(function(size) { %>
                            <input type="radio" name="size" id="size-<%= size %>" value="<%= size %>">
                            <label for="size-<%= size %>"><%= size %></label>
                        <% }); %>
                    </div>
                </div>
                
                <div class="mb-4">
                    <label class="form-label">Color:</label>
                    <div class="color-selector">
                        <% product.colors.forEach(function(color) { %>
                            <input type="radio" name="color" id="color-<%= color %>" value="<%= color %>">
                            <label for="color-<%= color %>" style="background-color: <%= color %>;"></label>
                        <% }); %>
                    </div>
                </div>
                
                <div class="mb-4">
                    <label class="form-label">Quantity:</label>
                    <div class="input-group quantity-selector">
                        <button class="btn btn-outline-secondary" type="button" onclick="decrementQuantity()">-</button>
                        <input type="text" class="form-control text-center" id="quantity" value="1">
                        <button class="btn btn-outline-secondary" type="button" onclick="incrementQuantity()">+</button>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex mb-4">
                    <button class="btn add-to-cart-btn flex-fill">Add to Cart</button>
                    <button class="btn buy-now-btn flex-fill">Buy Now</button>
                </div>
                
                <div class="mb-4">
                    <button class="btn btn-link p-0">
                        <i class="far fa-heart"></i> Add to Wishlist
                    </button>
                </div>
                
                <!-- Product Description -->
                <div class="product-specs">
                    <h3>DESCRIPTION</h3>
                    <p><%= product.description %></p>
                    
                    <h3>Size & Fit</h3>
                    <p><%= product.sizeFit %></p>
                    
                    <h3>Wash Care</h3>
                    <p><%= product.washCare %></p>
                    
                    <h3>Specifications</h3>
                    <p><%= product.specifications %></p>
                    
                    <p class="text-muted fst-italic mt-4">Note: The actual colors of the product may vary slightly due to photographic lighting sources or your display settings.</p>
                </div>
            </div>
        </div>
        
        <!-- You May Also Like Section -->
        <div class="mt-5">
            <h2 class="mb-4">YOU MAY ALSO LIKE</h2>
            <div class="row">
                <% product.similarProducts.forEach(function(similarProduct) { %>
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card similar-product">
                            <img src="<%= similarProduct.images[0].url %>" class="card-img-top" alt="<%= similarProduct.name %>">
                            <div class="card-body">
                                <div class="mb-1">
                                    <% for (let i = 0; i < 5; i++) { %>
                                        <% if (i < similarProduct.ratings.average) { %>
                                            <i class="fas fa-star text-warning"></i>
                                        <% } else if (i < similarProduct.ratings.average + 0.5) { %>
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        <% } else { %>
                                            <i class="far fa-star text-warning"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                                <h5 class="card-title"><%= similarProduct.name %></h5>
                                <p class="card-text fw-bold">₹<%= similarProduct.price %></p>
                                <a href="/productdetails?id=<%= similarProduct._id %>" class="btn btn-sm btn-outline-dark">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>
    
    <!-- Call to Action Section -->
    <section class="cta-section text-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h2 class="mb-4">Get Exclusive Offers & Updates</h2>
                    <p class="mb-4">Subscribe to our newsletter for exclusive deals, new arrivals, and fashion tips.</p>
                    <div class="input-group mb-3 mx-auto" style="max-width: 500px;">
                        <input type="email" class="form-control" placeholder="Enter your email address">
                        <button class="btn btn-dark" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5>Customer Service</h5>
                    <ul>
                        <li><a href="#" class="text-white-50">Contact Us</a></li>
                        <li><a href="#" class="text-white-50">FAQs</a></li>
                        <li><a href="#" class="text-white-50">Size Guide</a></li>
                        <li><a href="#" class="text-white-50">Order Tracking</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Shop</h5>
                    <ul>
                        <li><a href="#" class="text-white-50">Men's Collection</a></li>
                        <li><a href="#" class="text-white-50">Women's Collection</a></li>
                        <li><a href="#" class="text-white-50">New Arrivals</a></li>
                        <li><a href="#" class="text-white-50">Sale</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Company</h5>
                    <ul>
                        <li><a href="#" class="text-white-50">About Us</a></li>
                        <li><a href="#" class="text-white-50">Careers</a></li>
                        <li><a href="#" class="text-white-50">Privacy Policy</a></li>
                        <li><a href="#" class="text-white-50">Terms & Conditions</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Follow Us</h5>
                    <div class="social-icons mb-3">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-pinterest"></i></a>
                    </div>
                    <h5>We Accept</h5>
                    <div>
                        <i class="fab fa-cc-visa me-2"></i>
                        <i class="fab fa-cc-mastercard me-2"></i>
                        <i class="fab fa-cc-amex me-2"></i>
                        <i class="fab fa-cc-paypal"></i>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom text-center">
                <p>&copy; 2025 ELITE WEAR. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // Function to change main image
        function changeMainImage(src) {
            document.getElementById('mainImage').src = src;
        }
        
        // Quantity selector functions
        function incrementQuantity() {
            const quantityInput = document.getElementById('quantity');
            const currentValue = parseInt(quantityInput.value);
            quantityInput.value = currentValue + 1;
        }
        
        function decrementQuantity() {
            const quantityInput = document.getElementById('quantity');
            const currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>