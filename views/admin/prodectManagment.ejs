    <div class="container my-5">
        <!-- Header Section -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Products</li>
            </ol>
        </nav>
        <div class="products-header d-flex justify-content-between align-items-center">
            <h1>Products</h1>
            <div class="d-flex align-items-center">
                <div class="search-bar me-3">
                    <i class="fas fa-search"></i>
                    <input type="text" class="form-control" placeholder="Search product...">
                </div>
                <button class="btn btn-date me-3">Select Dates</button>
                <button class="btn btn-add-new"><i class="fas fa-plus me-1"></i> Add New Product</button>
            </div>
        </div>

        <!-- Filter and Sort Section -->
        <div class="filter-sort-section d-flex justify-content-between align-items-center">
            <div>
                <span class="me-2 fw-medium">Filter By</span>
                <button class="btn">Product Category <i class="fas fa-chevron-down ms-1"></i></button>
                <button class="btn">Price <i class="fas fa-chevron-down ms-1"></i></button>
            </div>
            <div>
                <span class="me-2 fw-medium">Sort</span>
                <button class="btn">Price High-Low</button>
                <button class="btn">Price Low-High</button>
                <button class="btn">Last added first</button>
            </div>
        </div>

